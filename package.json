{
  "name": "server",
  "scripts": {
    "start": "NODE_ENV=production dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts --debug",
    "start-dev": "NODE_ENV=development dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
    "start-prod": "pm2 start npm -- start",
    "dev": "npm-run-all --parallel start playground",
    "debug": "dotenv -- nodemon -e ts,graphql -x ts-node --inspect src/index.ts",
    "playground": "graphql playground",
    "build": "rimraf dist && tsc",
    "copy-types-for-client": "cp -R ./src/types/* ../client/node_modules/@types"
  },
  "dependencies": {
    "apollo-errors": "^1.9.0",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "dataloader": "^1.4.0",
    "dotenv-cli": "^1.4.0",
    "graphql-yoga": "^1.16.2",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.13",
    "node-fetch": "^2.2.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-oauth2-refresh": "^1.1.0",
    "passport-spotify": "^1.0.1",
    "prisma-binding": "^2.1.5"
  },
  "devDependencies": {
    "@types/async": "^2.0.49",
    "@types/passport": "^0.4.6",
    "apollo": "^1.9.1",
    "graphql": "^14.0.2",
    "morgan": "^1.9.0",
    "node-uuid": "^1.4.8",
    "nodemon": "^1.18.4",
    "npm-run-all": "4.1.3",
    "prisma": "^1.15.3",
    "rimraf": "2.6.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3"
  },
  "resolutions": {
    "graphql": "^14.0.2"
  }
}
